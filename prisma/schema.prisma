generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      Int         @id(map: "users_pkey")    @default(autoincrement())
  walletPublicKey         String?
  username                String?
  imageUrl                String?
  betAmount               String?
  friendList              String[]
  messages                Message[]
}

model Message {
  id          Int       @id       @default(autoincrement())
  content     String?
  sender      User?     @relation(fields: [senderId], references: [id])
  senderId    Int?
  timestamp   String?
}

model ChatMessage {
  id        Int       @id     @default(autoincrement())
  content   String?
  sender    String?
  senderId  String?
  chatId    String?
  timestamp String?
}